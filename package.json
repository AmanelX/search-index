{
  "name": "search-index",
  "description": "A persistent full text search engine for the browser and Node.js",
  "version": "0.9.1",
  "homepage": "https://github.com/fergiemcdowall/search-index",
  "engines": {
    "node": ">=3"
  },
  "license": "MIT",
  "dependencies": {
    "bunyan": "1.8.1",
    "leveldown": "1.5.0",
    "levelup": "1.3.2",
    "lodash.defaults": "4.2.0",
    "search-index-adder": "0.1.11",
    "search-index-searcher": "0.1.10",
    "stopword": "0.1.1"
  },
  "devDependencies": {
    "JSONStream": "^1.1.4",
    "brfs": "^1.4.3",
    "browserify": "^13.1.0",
    "chromedriver": "2.23.1",
    "highland": "^2.10.0",
    "level-js": "^2.2.4",
    "level-out": "0.0.6",
    "mocha": "^3.0.2",
    "reuters-21578-json": "0.0.8",
    "selenium-webdriver": "^2.53.3",
    "should": "^10.0.0",
    "sqldown": "^2.1.0",
    "sqlite3": "^3.1.4",
    "standard": "8.1.0",
    "tape": "^4.6.0",
    "term-vector": "0.1.2",
    "uglifyjs": "^2.4.10"
  },
  "author": {
    "email": "fergusmcdowall@gmail.com",
    "name": "Fergus McDowall"
  },
  "keywords": [
    "index",
    "language",
    "lucene",
    "natural",
    "offline",
    "search"
  ],
  "main": "lib/index.js",
  "browser": {
    "leveldown": "level-js"
  },
  "maintainers": [
    {
      "name": "Fergus McDowall",
      "email": "fergusmcdowall@gmail.com",
      "url": "https://github.com/fergiemcdowall"
    }
  ],
  "scripts": {
    "dist": "browserify lib/index.js --standalone SearchIndex > dist/search-index.js",
    "dist-min": "npm run dist && cat dist/search-index.js | uglifyjs -c dead_code > dist/search-index.min.js",
    "empty-sandbox": "rm -rf test/sandbox && mkdir test/sandbox",
    "test": "npm run empty-sandbox && date && npm run test-node && npm run test-browserify && standard test/* lib/*",
    "test-browserify": "npm run dist-min && tape test/browser/selenium-test.js",
    "test-node": "mocha test/node/general-tests --recursive --timeout 10000"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fergiemcdowall/search-index.git"
  }
}
